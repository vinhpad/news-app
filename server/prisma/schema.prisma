generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  categoryId   Int         @id @default(autoincrement())
  nameCategory String      @unique
  Newspaper    Newspaper[]
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@map("category")
}

model Favourite {
  favouriteId Int       @id @default(autoincrement())
  userId      Int
  user        User      @relation(fields: [userId], references: [userId])
  newspaperId Int
  newspaper   Newspaper @relation(fields: [newspaperId], references: [newspaperId])
  cteatedAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("favourite")
}

model User {
  userId     Int         @id @default(autoincrement())
  email      String      @unique
  username   String      @unique
  password   String
  avaUrl     String?
  cteatedAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  favourites Favourite[]

  @@map("user")
}

model Newspaper {
  newspaperId  Int         @id @default(autoincrement())
  title        String?     @unique
  description  String?
  image        String?
  content      String?
  writer       String?
  nameCategory String
  category     Category    @relation(fields: [nameCategory], references: [nameCategory])
  date         DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  Favourite    Favourite[]

  @@map("newspaper")
}
